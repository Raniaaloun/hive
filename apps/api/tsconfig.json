{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["express"]
  },
  "include": [
    "src",
    "config",
    "types",
    "src/models",
    "src/types/**/*.d.ts",
    "src/**/*.ts"
  ]
}
